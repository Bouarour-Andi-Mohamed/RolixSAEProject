@model RolixSAEProject.Models.LoginViewModel
@{
    ViewData["Title"] = "Se connecter";
    var returnUrl = Model.ReturnUrl ?? Context.Request.Query["returnUrl"].ToString();
}

<section class="auth-shell">
    <div class="auth-card">
        <h1 class="auth-title">Se connecter</h1>
        <p class="auth-subtitle">Accédez à votre espace Rolix avec votre identifiant.</p>

        <form asp-action="Login" method="post" class="auth-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" value="@returnUrl" />

            <div class="form-group">
                <label asp-for="Identifiant" class="form-label"></label>
                <input asp-for="Identifiant" class="form-control" autocomplete="username" />
                <span asp-validation-for="Identifiant" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MotDePasse" class="form-label"></label>
                <input asp-for="MotDePasse" class="form-control" autocomplete="current-password" />
                <span asp-validation-for="MotDePasse" class="text-danger"></span>
            </div>

            <button type="submit" class="primary-button">Se connecter</button>

            <div class="validation-summary">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
