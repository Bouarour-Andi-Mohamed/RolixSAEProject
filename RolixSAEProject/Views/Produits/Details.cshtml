@model RolixSAEProject.Models.Produit

@{
    ViewData["Title"] = "Détail du produit";
}

<h1 class="mt-4 mb-3">@Model.Nom</h1>

<div class="row">
    <div class="col-md-8">
        <dl class="row">
            <dt class="col-sm-3">Collection</dt>
            <dd class="col-sm-9">@Model.Collection</dd>

            <dt class="col-sm-3">Prix (EUR)</dt>
            <dd class="col-sm-9">@Model.PrixEUR.ToString("N0") €</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.DescriptionFR</dd>
        </dl>
    </div>

    <div class="col-md-4">
        @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl"
                 alt="@Model.Nom"
                 class="img-fluid mb-3" />
        }

        <div class="card border-primary">
            <div class="card-body">
                <h5 class="card-title">Demander un devis</h5>
                <p class="card-text">
                    Au Sprint 1, ce bouton est uniquement visuel.
                    Il prépare la future fonctionnalité de demande de devis.
                </p>
                <button class="btn btn-primary" type="button">
                    Demander un devis
                </button>
            </div>
        </div>

        <a asp-controller="Produits" asp-action="Index" class="btn btn-link mt-3">
            &laquo; Retour à la liste
        </a>
    </div>
</div>
