@model RolixSAEProject.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Mot de passe oublié";
}

<div class="page-wrapper">
    <div class="page-hero">
        <div class="section-divider"></div>
        <h1 class="hero-title">Mot de passe oublié</h1>
        <p class="hero-subtitle">Recevez un code par email pour changer votre mot de passe.</p>
    </div>

    <section class="section-shell" style="max-width:520px;margin:0 auto;">
        <div style="border:1px solid #e5e7eb;background:#fff;padding:16px;">
            @if (!string.IsNullOrWhiteSpace(Model.Error))
            {
                <div style="background:#fef2f2;border:1px solid #ef4444;color:#7f1d1d;padding:10px;margin-bottom:12px;">
                    @Model.Error
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Info))
            {
                <div style="background:#ecfdf5;border:1px solid #10b981;color:#065f46;padding:10px;margin-bottom:12px;">
                    @Model.Info
                </div>
            }

            <form asp-controller="Auth" asp-action="SendResetCode" method="post">
                @Html.AntiForgeryToken()

                <div style="display:grid;gap:8px;">
                    <label style="font-weight:700;">Identifiant</label>
                    <input asp-for="Identifiant" style="padding:10px;border:1px solid #e5e7eb;" />
                    <span asp-validation-for="Identifiant" style="color:#b91c1c;"></span>
                </div>

                <button type="submit"
                        style="margin-top:14px;border:1px solid #111;background:#111;color:#fff;padding:10px 12px;width:100%;cursor:pointer;">
                    Envoyer le code
                </button>

                <div style="margin-top:12px;text-align:center;">
                    <a asp-controller="Auth" asp-action="Login" style="color:#111;text-decoration:none;">Retour à la connexion</a>
                </div>
            </form>
        </div>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
