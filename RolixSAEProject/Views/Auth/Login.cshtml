@{
    ViewData["Title"] = "Se connecter";
    var error = ViewBag.Error as string;
    var returnUrl = ViewBag.ReturnUrl as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<div class="page-wrapper">
    <div class="page-hero">
        <div class="section-divider"></div>
        <h1 class="hero-title">Se connecter</h1>
        <p class="hero-subtitle">Accédez à votre espace client.</p>
    </div>

    <section class="section-shell login-shell">
        @if (!string.IsNullOrWhiteSpace(error))
        {
            <div class="login-error">@error</div>
        }

        <div class="login-card">
            <form class="login-form" method="post" asp-controller="Auth" asp-action="Login">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="@returnUrl" />

                <div class="login-field">
                    <label>Identifiant</label>
                    <input name="identifiant" autocomplete="username" />
                </div>

                <div class="login-field">
                    <label>Mot de passe</label>
                    <input name="motDePasse" type="password" autocomplete="current-password" />
                </div>

                <div class="login-actions">
                    <button class="button login-submit" type="submit">Se connecter</button>
                    <p class="login-hint">Vos identifiants sont vérifiés dans Dataverse.</p>
                </div>
            </form>
        </div>
    </section>
</div>
